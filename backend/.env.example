APP_NAME=swapi-proxy
APP_ENV=local
APP_KEY=
APP_DEBUG=true
APP_URL=http://localhost:8080

LOG_CHANNEL=stack
LOG_STACK=single
LOG_DEPRECATIONS_CHANNEL=null
LOG_LEVEL=debug

# ──────────────────────────────────────────────
# Redis (used for cache, queue, and query logs)
# ──────────────────────────────────────────────
REDIS_CLIENT=predis
REDIS_HOST=redis
REDIS_PASSWORD=null
REDIS_PORT=6379

CACHE_STORE=redis
QUEUE_CONNECTION=rabbitmq

# ──────────────────────────────────────────────
# RabbitMQ (queue)
# ──────────────────────────────────────────────
RABBITMQ_HOST=rabbitmq
RABBITMQ_PORT=5672
RABBITMQ_USER=guest
RABBITMQ_PASSWORD=guest
RABBITMQ_VHOST=/
RABBITMQ_QUEUE=default

# ──────────────────────────────────────────────
# SWAPI External API
# ──────────────────────────────────────────────
SWAPI_BASE_URL=https://www.swapi.tech/api
SWAPI_TIMEOUT=5
SWAPI_RETRY_TIMES=2
SWAPI_RETRY_SLEEP=100
